(defun kicker-ess-turn-on-fix-path ()
  (interactive)
  (when (string= "S" ess-language)
    (add-hook 'auto-indent-after-yank-hook 'kicker-ess-fix-path t t)))
(add-hook 'ess-mode-hook 'kicker-ess-turn-on-fix-path)
@end verbatim

